<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#bdd37a"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/createPostError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <EditText
        android:id="@+id/createPost"
        android:layout_width="322dp"
        android:layout_height="85dp"
        android:layout_marginTop="140dp"
        android:background="#ebffbd"
        android:ems="10"
        android:hint="Write a Post!"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/createPostBtn"
        android:layout_width="105dp"
        android:layout_height="46dp"
        android:background="#d8ffcd"
        android:onClick="createPostBtn"
        android:text="Create Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/createPost"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/createPost"
        app:layout_constraintTop_toBottomOf="@+id/PostImage"
        app:layout_constraintVertical_bias="0.706" />

    <ImageView
        android:id="@+id/PostImage"
        android:layout_width="45dp"
        android:layout_height="62dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/createPostError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPost"
        app:layout_constraintVertical_bias="0.369"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/UploadImage"
        android:layout_width="112dp"
        android:layout_height="46dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="213dp"
        android:background="#d8ffcd"
        android:onClick="UploadNewPostImageButton"
        android:text="Upload image"
        app:layout_constraintBottom_toTopOf="@+id/createPostBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toEndOf="@+id/PostImage"
        app:layout_constraintTop_toBottomOf="@+id/createPost"
        app:layout_constraintVertical_bias="0.034" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="318dp"
        android:layout_height="64dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="56dp"
        android:gravity="center"
        android:text="What do you want to share with the world? "
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/createPost"
        app:layout_constraintEnd_toEndOf="@+id/createPost"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/createPost" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="19dp"
        android:text="Add Location to post"
        android:textStyle="italic"
        android:onClick="getLocation"
        app:layout_constraintBottom_toTopOf="@+id/PostImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPost"
        android:background="#ebffbd"
        app:layout_constraintVertical_bias="0.232" />
</androidx.constraintlayout.widget.ConstraintLayout>