<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#bdd37a"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendToFeed"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="@+id/createComment"
        app:layout_constraintEnd_toEndOf="@+id/postContent"
        android:background="#d8ffcd"
        app:layout_constraintTop_toTopOf="@+id/createComment" />

    <Button
        android:id="@+id/createComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#d8ffcd"
        android:onClick="createComment"
        android:text="Comment"
        app:layout_constraintStart_toStartOf="@+id/postContent"
        app:layout_constraintTop_toBottomOf="@+id/commentField" />

    <TextView
        android:id="@+id/postContent"
        android:layout_width="320dp"
        android:layout_height="137dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="144dp"
        android:layout_height="149dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/postContent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/defaultpic" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments"
        android:layout_width="320dp"
        android:layout_height="216dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/postContent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/postContent"
        app:layout_constraintTop_toBottomOf="@+id/createComment" />

    <TextView
        android:id="@+id/location"
        android:layout_width="172dp"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/timestamp"
        app:layout_constraintEnd_toEndOf="@+id/timestamp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/timestamp" />

    <TextView
        android:id="@+id/createdBy"
        android:layout_width="172dp"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/location"
        app:layout_constraintEnd_toEndOf="@+id/location"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/location" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="171dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/postImage"
        app:layout_constraintEnd_toEndOf="@+id/postContent"
        app:layout_constraintTop_toTopOf="@+id/postImage"
        app:layout_constraintVertical_bias="0.77" />

    <EditText
        android:id="@+id/commentField"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="#ebffbd"
        android:ems="10"
        android:hint="Write your comment"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/postContent"
        app:layout_constraintTop_toBottomOf="@+id/postContent" />
</androidx.constraintlayout.widget.ConstraintLayout>