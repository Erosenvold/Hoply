<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="137dp">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ebffbd">

            <TextView
                android:id="@+id/postUsernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:text="Username"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/uploadedByText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/uploadedByText"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/uploadedByText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Uploaded by "
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/postImageView"
                app:layout_constraintEnd_toStartOf="@+id/postUsernameText"
                app:layout_constraintTop_toBottomOf="@+id/postHeadlineText" />

            <TextView
                android:id="@+id/postHeadlineText"
                android:layout_width="238dp"
                android:layout_height="75dp"
                android:layout_marginTop="4dp"
                android:inputType="textMultiLine"
                android:text="contentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontent"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/postImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/postImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3ff52"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>