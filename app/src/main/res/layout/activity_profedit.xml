<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3ff52"
    tools:context=".ProfileEdit">

    <TextView
        android:id="@+id/HeaderTxt"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="19dp"
        android:text="Settings"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ProfilePicHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="23dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ProfileTextHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeaderTxt"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars[0]"
        tools:visibility="visible" />

    <Button
        android:id="@+id/UploadNewImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="UploadNewImageButton"
        android:text="Upload New"
        app:layout_constraintBottom_toBottomOf="@+id/ProfilePic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toEndOf="@+id/ProfilePic"
        app:layout_constraintTop_toTopOf="@+id/ProfilePic"
        app:layout_constraintVertical_bias="0.509" />

    <TextView
        android:id="@+id/ProfileTextHeader"
        android:layout_width="280dp"
        android:layout_height="39dp"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:text="Profile Text:"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePicHeader" />

    <TextView
        android:id="@+id/ProfilePicHeader"
        android:layout_width="271dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="Profile Photo:"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/ProfilePic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeaderTxt"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="280dp"
        android:layout_height="126dp"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:hint="Type your profile text here..."
        android:inputType="textPersonName"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/SaveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#b0d14d"
        app:layout_constraintTop_toBottomOf="@+id/ProfileTextHeader" />

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:onClick="SaveChanges"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821" />

    <Button
        android:id="@+id/DoneButton"
        android:layout_width="111dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:onClick="DoneButton"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SaveButton" />

</androidx.constraintlayout.widget.ConstraintLayout>