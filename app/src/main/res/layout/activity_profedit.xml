<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3ff52"
    tools:context=".ProfileEdit">

    <TextView
        android:id="@+id/HeaderTxt"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:text="Settings"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"


        android:adjustViewBounds="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePicHeader"
        tools:srcCompat="@tools:sample/avatars[0]"
        tools:visibility="visible" />

    <Button
        android:id="@+id/UploadNewImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="UploadNewImageButton"
        android:text="Upload New"
        app:layout_constraintBottom_toBottomOf="@+id/ProfilePic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toEndOf="@+id/ProfilePic"
        app:layout_constraintTop_toTopOf="@+id/ProfilePic"
        app:layout_constraintVertical_bias="0.509" />

    <TextView
        android:id="@+id/ProfileTextHeader"
        android:layout_width="280dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Profile Text:"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="@+id/UploadNewImageButton"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/ProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePic" />


    <TextView
        android:id="@+id/ProfilePicHeader"
        android:layout_width="271dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Profile Photo:"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="@+id/HeaderTxt"
        app:layout_constraintStart_toStartOf="@+id/HeaderTxt"
        app:layout_constraintTop_toBottomOf="@+id/HeaderTxt" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="280dp"
        android:layout_height="126dp"
        android:background="#ebffbd"
        android:ems="10"
        android:hint="Type your profile text here..."
        android:inputType="textPersonName"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/ProfileTextHeader"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/ProfileTextHeader"
        app:layout_constraintTop_toBottomOf="@+id/ProfileTextHeader" />

    <Button
        android:id="@+id/DoneButton"
        android:layout_width="170dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:onClick="DoneButton"
        android:text="Save and Exit"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

</androidx.constraintlayout.widget.ConstraintLayout>